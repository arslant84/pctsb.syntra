# SYNTRA VMS - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===== DATABASE CONFIGURATION =====
DATABASE_HOST=localhost
DATABASE_NAME=syntra
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_at_least_32_characters_long

# ===== EMAIL CONFIGURATION (Optional - from CLAUDE.local.md) =====
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=your_brevo_smtp_user
EMAIL_HOST_PASSWORD=your_brevo_smtp_password
DEFAULT_FROM_EMAIL=VMS System <noreply@yourcompany.com>
SERVER_EMAIL=VMS System <noreply@yourcompany.com>
EMAIL_ADMIN=admin@yourcompany.com

# ===== PERFORMANCE CONFIGURATION =====
# Database connection pool settings (already optimized in code)
# These are reference values - actual configuration is in src/lib/db.ts
MAX_DB_CONNECTIONS=50
CONNECTION_TIMEOUT=10
IDLE_TIMEOUT=300
MAX_LIFETIME=3600

# ===== SECURITY CONFIGURATION =====
# Rate limiting settings (already configured in code)
# These are reference values - actual configuration is in src/lib/rate-limiter.ts
RATE_LIMIT_API_READ=100
RATE_LIMIT_API_WRITE=30
RATE_LIMIT_AUTH=5

# ===== CACHING CONFIGURATION =====
# Cache TTL settings (already configured in code)
# These are reference values - actual configuration is in src/lib/cache.ts
CACHE_TTL_USER_REQUESTS=300
CACHE_TTL_DASHBOARD_STATS=600
CACHE_TTL_USER_PERMISSIONS=1800
CACHE_TTL_DROPDOWN_DATA=3600